<% include ./partials/header %>

	<title>Canine Consulting Registration Page</title>
	<link rel="stylesheet" type="text/css" href="stylesheets/register.css">
<% include ./partials/navbar %>


	<div id="form-body">
		<div class="form-container">
			<h1 class="form-header">Register</h1>
			<p class="form-content">*Profiles are only available for current students, sign up under <a href="/classes" class="classes-button">Classes</a></p>
			<form class="registration-login-form" action="/register" method="post">
				<label>Email</label>
				<input type="email" name="username" required>

				<label>Dog's name</label>
				<input type="string" name="dogName" required>

				<label>Dog's age</label>
				<input type="number" name="dogAge" required>

				<label>Training Package</label>
				<input type="text" name="package" required>

				<label>Password</label>
				<input type="password" name="password" placeholder="Min. 6 characters" required>

				<label>Confirm Password</label>
				<input type="password" name="confirmPassword" required>

				<button>Submit</button>
			</form>
			<a href="/login" class="login-button">already have an account?</a>
		</div>		
	</div>


<% include ./partials/footer %>